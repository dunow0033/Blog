@model List<Bloggie.Web.Models.Domain.Tag>
@{
}

<div class="bg-secondary bg-opacity-10 py-2">
	<div class="container">
		<h1>List All Tags - Admin Functionality</h1>
	</div>
</div>

<div class="container py-5">
	@if (Model != null && Model.Any())
	{
		<table class="table">
			<thead>
				<tr>
					<th>Id</th>
					<th>Name</th>
					<th>Display Name</th>
					<th> </th>
				</tr>
			</thead>

			<tbody>
				@foreach(var tag in Model)
				{
					<tr>
						<th>@tag.Id</th>
						<th>@tag.Name</th>
						<th>@tag.DisplayName</th>
						<th><a asp-area="" asp-controller="AdminTags" 
							asp-action="Edit"
							asp-route-id="@tag.Id">Edit</a></th>
					</tr>
				}
			</tbody>
		</table>
	}
	else
	{
		<h1>There is no spoon :)</h1>
	}
</div>